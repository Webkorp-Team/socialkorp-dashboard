{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "handle-config": "cd .. && yarn run handle-config",
    "gen-key": "./genkey.sh --no-overwrite",
    "init": "yarn run handle-config && yarn run gen-key",
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "yarn run init && yarn run shell",
    "deploy": "yarn run init && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "type": "module",
  "main": "index.js",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "escape-html": "^1.0.3",
    "express": "^5.0.0-alpha.8",
    "express-async-handler": "^1.1.4",
    "express-bearer-token": "^2.4.0",
    "fast-crc32c": "^2.0.0",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.15.5",
    "jose": "^3.14.3",
    "just-clone": "^3.2.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0"
  },
  "private": true
}
